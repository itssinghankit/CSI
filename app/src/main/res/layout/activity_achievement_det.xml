<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AchievementDetActivity">

    <TextView
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IIT Jodhpur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_16sdp"
        android:maxLines="1"/>
    <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
        android:id="@+id/imagerecylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/venue"
        tools:listitem="@layout/domain_recycler" />
    <TextView
        android:id="@+id/teamname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vanquishers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagerecylerview"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_14sdp"
        android:maxLines="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>