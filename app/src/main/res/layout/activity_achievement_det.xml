<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AchievementDetActivity">

    <ImageView
        android:id="@+id/csilogo"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_9sdp"
        android:src="@drawable/csi_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/blueLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:background="@color/darkblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csilogo"
        android:layout_marginTop="@dimen/_9sdp"/>
    <TextView
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IIT Jodhpur"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/blueLine"
        app:layout_constraintTop_toTopOf="@id/blueLine"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/montserrat_semibold"
        android:maxLines="1"/>
    <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
        android:id="@+id/imagerecylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/venue"
        tools:listitem="@layout/domain_recycler" />
    <TextView
        android:id="@+id/teamname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vanquishers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagerecylerview"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_12sdp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="29.12.2023"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teamname"
        android:textColor="@color/txtgrey"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_3sdp"
        android:maxLines="1"/>
    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/linecolor"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_marginTop="@dimen/_25sdp"/>
    <TextView
        android:id="@+id/members_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Members"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view0"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_12sdp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ankit, Pushkar, Raghav, Divyanshu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/members_txt"
        android:textColor="@color/txtgrey"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_3sdp"
        android:maxLines="1"/>


</androidx.constraintlayout.widget.ConstraintLayout>